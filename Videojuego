/**implementacion de metodo de f√°brica**/

public abstract class VideoJuegos {
    
  String nombre, compania,consola;
  int anioLanzamiento,cantidad;
  float precio;
    
   public String getNombre(){ //nombre del videojuego
    return nombre;
  }
   
  public String getcompania(){
      return compania;
  }
  
  public String getConsola(){
       return consola;
  }
  
  public int getLanzamiento(){
      return anioLanzamiento;
  }
  
  public float getPrecio(){
      return precio;
  }
          
  public void surtir(){// referente a q la tienda se surta de cierto juego
      System.out.println("Comprando lo necesario para abastecer nuestra tienda");
  }
  public void exibir(){
      System.out.println("En exhibicion " + nombre);
  }
  
  public void vender(){
      System.out.println("Vendido " + nombre);
  }
}


}
