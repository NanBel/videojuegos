/**Este observador estará a la espectativa esperando q algun producto se quede en 0**/
import java.util.Observable;
import java.util.Observer;

public class ObsSinExistencia implements Observer{
  private int cantidad

  public void update(Observable Observable, Object cantidad){
    this.cantidad=((Videojuego)observable).getStock();
    verificar();
  }
  public void verificar(){
    if(cantidad<1){
      System.out.println("Este producto ya no tiene más elementos en Stock");
    }
  }
}
